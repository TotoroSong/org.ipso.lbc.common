<Configuration status="error" strict="false" name="default" monitorInterval="60" package="org.ipso.lbc.common.frameworks.logging">
    <Properties>
    </Properties>
    <Appenders>
        <Console name="stdErr" target="SYSTEM_ERR">
            <PatternLayout pattern="> %d%n> %-5level from %logger{36}%n> %msg%n%n"/>
            <Filters>
                <ThresholdFilter onMatch="ACCEPT"  onMismatch="DENY"   level="debug"/>
            </Filters>
        </Console>
    </Appenders>

    <Loggers>
        <Logger name="org.ipso" additivity="false" level="debug">
            <AppenderRef ref="stdErr"/>
        </Logger>

        <Root level="warn">
            <AppenderRef ref="stdErr"/>
        </Root>
    </Loggers>
</Configuration>